<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whiteLuki</item>
        <item name="colorPrimaryDark">@color/violetLuki</item>
        <item name="colorAccent">@color/salmonLuki</item>

        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


        <item name="android:spotShadowAlpha">0.5</item>
    </style>

    <style name="ButtonMainBig" parent="Widget.AppCompat.Button">

        <item name="android:drawableEnd">@drawable/btn_arrow_right</item>
        <item name="android:background">@drawable/btn_main_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteLuki</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>

    </style>

    <style name="ButtonMainSmall" parent="Widget.AppCompat.Button">

        <item name="android:background">@drawable/btn_main_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteLuki</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>

    </style>

    <style name="InputextMain" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/inputfield_main_big</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColorHint">@color/mediumGrayLuki</item>
        <item name="android:textColor">@color/darkGrayLuki</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/mediumGrayLuki</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>


    </style>

</resources>